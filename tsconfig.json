{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "outDir": "dist",
    "noUnusedLocals": true,
    "lib": ["es6", "es7", "dom"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["dist", "build", "node_modules"]
}
